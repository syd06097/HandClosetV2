CREATE TABLE clothes
(
   id INT AUTO_INCREMENT PRIMARY KEY,
   imgpath VARCHAR(255) NOT NULL,
   category VARCHAR(255) NOT NULL,
   subcategory VARCHAR(255) NOT NULL,
   season VARCHAR(255) NOT NULL,
   description TEXT,
   wearcnt INT NOT NULL DEFAULT FLOOR(RAND() * 11),
   createdate DATE NOT NULL DEFAULT DATEADD('DAY', FLOOR(RAND() * 17), DATE '2023-05-15')
);

CREATE TABLE diary
(
     id INT AUTO_INCREMENT PRIMARY KEY,
     season VARCHAR(255) NOT NULL,
     `date` DATE NOT NULL,
     note TEXT,
     thumbnailpath VARCHAR(255)

);

CREATE TABLE diary_image_ids    //다이어리 엔티티와 이미지 id들을 관리
(
     diary_id INT NOT NULL,
     image_id LONG NOT NULL,
     PRIMARY KEY (diary_id, image_id),
     FOREIGN KEY (diary_id) REFERENCES diary(id)
);